<% if @leavelogs.count != 0%>
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">My User Leaves</h3>
    </div><!-- /.box-header -->
     <p style="padding-right: 10px; padding-left: 10px;"><%= link_to "Back", "/welcome/#index",class: "btn btn-primary"%><p></br></br>
    <div class="box-body">
      <table id="example1" class="table table-striped">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile No</th>
            <th>Reason for leave</th>
            <th>Date from</th>
            <th>Date to</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @leavelogs.each do |f|%>
            <tr>
              <td><%= f.user.first_name%></td>
              <td><%= f.user.last_name%></td>
              <td><%= f.user.email%></td>
              <td><%= f.user.mobile_no%></td>
              <td><%= f.reason_for_leave%></td>
              <td><%= f.leave_date_from.strftime('%d-%m-%Y')%></td>
              <td><%= f.leave_date_to.strftime('%d-%m-%Y')%></td>
              <td><%= f.status%></td>
              <% if f.status == "Applied"%>
                <td><%= link_to "Accept", "/welcome/#{f.id}/leave_accept", class: "btn btn-success pull-right glyphicon glyphicon-ok" %></td>
                <td><%= link_to "Decline", "/welcome/#{f.id}/leave_reject", class: "btn btn-danger pull-right glyphicon glyphicon-remove", style: "margin-left:  10px" %></td>
              <%end%>
            </tr>
          <%end%>
        </tbody>
      </table>

    </div><!-- /.box-body -->
  </div><!-- /.box -->  
<% end%>